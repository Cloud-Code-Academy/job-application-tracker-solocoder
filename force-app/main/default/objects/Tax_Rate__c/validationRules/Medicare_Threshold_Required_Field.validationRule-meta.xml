<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Medicare_Threshold_Required_Field</fullName>
    <active>true</active>
    <errorConditionFormula>IF (
    ISPICKVAL (Tax_Rate_Type__c, &apos;Medicare&apos;),
    ISNULL (Medicare_Threshold_Amount__c),
  FALSE
)</errorConditionFormula>
    <errorDisplayField>Medicare_Threshold_Amount__c</errorDisplayField>
    <errorMessage>Medicare Threshold Amount is needed for this tax rate type</errorMessage>
</ValidationRule>
